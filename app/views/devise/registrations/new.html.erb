<div class="container h-screen py-4">
  <div class="flex w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800 lg:max-w-4xl">
      <div class="hidden bg-cover lg:block lg:w-1/2" style="background-image: url('<%= asset_path('Ai_book_art4.jpg') %>');"></div>

      <div class="w-full px-6 py-8 md:px-8 lg:w-1/2">
          <div class="flex justify-center mx-auto">
            <%= image_tag 'mogul_logo.png', class: 'h-12 w-14', alt: 'Mogul logo' %>
          </div>

          <p class="mt-3 text-xl text-center text-gray-600 dark:text-gray-200">
              Welcome aboard!
          </p>

          <div class="text-center mt-6">
              <%= render "devise/shared/google_oauth2" %>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field mt-4">
              <%= f.label :name, "Full Name", class: "hidden mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full Name", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
            </div>

            <div class="field mt-4">
              <%= f.label :email, "Email Address", class: "hidden block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
            </div>

            <div class="field mt-4">
              <%= f.label :password, "(must have a capital letter, number & special character)", class: "block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (min #{@minimum_password_length} characters)", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
            </div>

            <div class="field mt-4">          
              <%= f.label :password_confirmation, "Confirm Password", class: "hidden block mb-2 text-sm font-medium text-gray-600 dark:text-gray-200" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password", class: "block w-full px-4 py-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
            </div>
            
            <div class="actions mt-6">
              <%= f.submit "Sign up", class: "w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-gray-800 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50" %>
            </div>
          <% end %>
          
          <div class="flex items-center justify-between mt-6">
              <span class="w-1/5 border-b dark:border-gray-600 md:w-1/4"></span>
              <%= link_to "Log in", new_session_path(resource_name), class: "text-xs text-gray-500 uppercase dark:text-gray-400 hover:underline" %>
              <span class="w-1/5 border-b dark:border-gray-600 md:w-1/4"></span>
          </div>
      </div>
  </div>
</div>
